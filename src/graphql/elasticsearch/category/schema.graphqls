type ESResponse {
  hits: JSON
  suggest: JSON
}

type Query {
  categories (
    ids: [Int] @doc(description: "Ids of the categories")
    name: String  @doc(description: "Name of the categories")
    from: Int @doc(description: "Defines the offset from the first result you want to fetch.")
    size: Int @doc(description: "Parameter allows configure the maximum amount of hits to be returned.")
    ): ESResponse
}
